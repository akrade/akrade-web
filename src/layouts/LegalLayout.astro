---
import PageLayout from '@/layouts/PageLayout.astro';

interface Props {
  title: string;
  description?: string;
  lastUpdated?: string;
  theme?: 'light' | 'dark' | 'neutral';
}

const { title, description, lastUpdated, theme } = Astro.props;
---

<PageLayout
  title={title}
  description={description}
  meta={lastUpdated ? `Last Updated: ${lastUpdated}` : undefined}
  theme={theme}
>
  <slot />
</PageLayout>
