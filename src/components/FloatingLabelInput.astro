---
/**
 * Floating Label Input Component
 * Material Design 3 inspired input with floating label animation
 */

export interface Props {
  name: string;
  type?: 'text' | 'email' | 'tel' | 'url' | 'password' | 'number';
  label: string;
  placeholder?: string;
  required?: boolean;
  value?: string;
  autocomplete?: string;
  class?: string;
}

const {
  name,
  type = 'text',
  label,
  placeholder = '',
  required = false,
  value = '',
  autocomplete,
  class: className = '',
} = Astro.props;

const inputId = `floating-${name}-${Math.random().toString(36).substring(7)}`;
---

<div class={`floating-input-wrapper ${className}`}>
  <input
    id={inputId}
    type={type}
    name={name}
    class="floating-input"
    placeholder={placeholder}
    required={required}
    value={value}
    autocomplete={autocomplete}
    aria-label={label}
  />
  <label for={inputId} class="floating-label">
    {label}{required && <span class="required-asterisk">*</span>}
  </label>
</div>

<style>
  .floating-input-wrapper {
    position: relative;
    width: 100%;
    margin-bottom: 1rem;
  }

  .floating-input {
    width: 100%;
    padding: 1.5rem 1rem 0.5rem;
    font-size: 1rem;
    font-family: inherit;
    background: var(--color-bg-elevated, rgba(255, 255, 255, 0.03));
    color: var(--color-text, #fff);
    border: 2px solid var(--color-border, rgba(255, 255, 255, 0.1));
    border-radius: 0.5rem;
    outline: none;
    transition: border-color 0.2s ease;
    appearance: none;
  }

  .floating-input::placeholder {
    color: transparent;
  }

  .floating-input:focus::placeholder {
    color: var(--color-text, #fff);
    opacity: 0.5;
  }

  .floating-label {
    position: absolute;
    left: 1rem;
    top: 50%;
    transform: translateY(-50%);
    font-size: 1rem;
    color: var(--color-text, #fff);
    opacity: 0.6;
    pointer-events: none;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    background: transparent;
    padding: 0;
  }

  .required-asterisk {
    color: var(--color-accent, #ff6b6b);
    margin-left: 0.125rem;
  }

  /* Floating state - when focused or has value */
  .floating-input:focus + .floating-label,
  .floating-input:not(:placeholder-shown) + .floating-label {
    top: 0.625rem;
    transform: translateY(0);
    font-size: 0.75rem;
    opacity: 1;
    color: var(--color-accent, #fff);
  }

  .floating-input:focus {
    border-color: var(--color-accent, #fff);
  }

  /* Disabled state */
  .floating-input:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .floating-input:disabled + .floating-label {
    opacity: 0.3;
  }

  /* Error state - can be added via class */
  .floating-input-wrapper.error .floating-input {
    border-color: #ef4444;
  }

  .floating-input-wrapper.error .floating-label {
    color: #ef4444;
  }

  .floating-input-wrapper.error .floating-border {
    background: #ef4444;
  }
</style>

<script>
  // Enhanced floating label behavior
  function initFloatingInputs() {
    const inputs = document.querySelectorAll('.floating-input');

    inputs.forEach((input) => {
      const inputEl = input as HTMLInputElement;

      // Check if input has value on load and float label
      const checkValue = () => {
        if (inputEl.value) {
          inputEl.setAttribute('data-has-value', 'true');
        } else {
          inputEl.removeAttribute('data-has-value');
        }
      };

      // Initial check
      checkValue();

      // Listen for changes
      inputEl.addEventListener('input', checkValue);
      inputEl.addEventListener('change', checkValue);
    });
  }

  // Initialize on load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initFloatingInputs);
  } else {
    initFloatingInputs();
  }

  // Re-initialize after View Transitions
  document.addEventListener('astro:page-load', initFloatingInputs);
</script>
