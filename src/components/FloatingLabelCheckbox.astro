---
/**
 * Floating Label Checkbox Component
 * Material Design 3 inspired checkbox with custom styling
 */

export interface Props {
  name: string;
  label?: string;
  required?: boolean;
  checked?: boolean;
  value?: string;
  class?: string;
}

const {
  name,
  label,
  required = false,
  checked = false,
  value = 'on',
  class: className = '',
} = Astro.props;

const checkboxId = `checkbox-${name}-${Math.random().toString(36).substring(7)}`;
const hasSlotContent = Astro.slots.has('default');
---

<div class={`checkbox-wrapper ${className}`}>
  <input
    type="checkbox"
    id={checkboxId}
    name={name}
    class="checkbox-input"
    required={required}
    checked={checked}
    value={value}
  />
  <label for={checkboxId} class="checkbox-label">
    <span class="checkbox-box">
      <!-- Checkmark created with pseudo-elements -->
    </span>
    <span class="checkbox-text">
      {hasSlotContent ? (
        <slot />
      ) : (
        <>
          {label}{!required && <span class="optional-indicator"> (optional)</span>}
        </>
      )}
    </span>
  </label>
</div>

<style>
  .checkbox-wrapper {
    position: relative;
    width: 100%;
    margin-bottom: 1rem;
  }

  .checkbox-input {
    position: absolute;
    opacity: 0;
    width: 0;
    height: 0;
  }

  .checkbox-label {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    cursor: pointer;
    user-select: none;
    font-size: 0.875rem;
    line-height: 1.5;
    color: var(--color-text, #fff);
  }

  .checkbox-box {
    display: inline-block;
    position: relative;
    background-color: transparent;
    width: 1.5rem;
    height: 1.5rem;
    min-width: 1.5rem;
    transform-origin: center;
    border: 2px solid var(--color-border, rgba(255, 255, 255, 0.3));
    border-radius: 50%;
    vertical-align: middle;
    margin-right: 0.625rem;
    margin-top: 0.125rem;
    transition: background-color 150ms 200ms, transform 350ms cubic-bezier(0.78, -1.22, 0.17, 1.89);
  }

  /* Checkmark lines created with pseudo-elements */
  .checkbox-box::before {
    content: "";
    width: 0;
    height: 2px;
    border-radius: 2px;
    background: var(--color-text, #fff);
    position: absolute;
    transform: rotate(45deg);
    top: 0.8125rem;
    left: 0.5625rem;
    transition: width 50ms ease 50ms;
    transform-origin: 0% 0%;
  }

  .checkbox-box::after {
    content: "";
    width: 0;
    height: 2px;
    border-radius: 2px;
    background: var(--color-text, #fff);
    position: absolute;
    transform: rotate(305deg);
    top: 1rem;
    left: 0.625rem;
    transition: width 50ms ease;
    transform-origin: 0% 0%;
  }

  /* Hover preview of checkmark */
  .checkbox-label:hover .checkbox-box::before {
    width: 0.3125rem;
    transition: width 100ms ease;
  }

  .checkbox-label:hover .checkbox-box::after {
    width: 0.625rem;
    transition: width 150ms ease 100ms;
  }

  /* Checked state */
  .checkbox-input:checked + .checkbox-label .checkbox-box {
    background-color: var(--color-accent, #fff);
    border-color: var(--color-accent, #fff);
    transform: scale(1.25);
  }

  .checkbox-input:checked + .checkbox-label .checkbox-box::before {
    width: 0.3125rem;
    background: var(--color-bg-primary, #000);
    transition: width 150ms ease 100ms;
  }

  .checkbox-input:checked + .checkbox-label .checkbox-box::after {
    width: 0.625rem;
    background: var(--color-bg-primary, #000);
    transition: width 150ms ease 100ms;
  }

  /* Checked hover state */
  .checkbox-input:checked + .checkbox-label:hover .checkbox-box {
    background-color: var(--color-accent, #fff);
    transform: scale(1.25);
  }

  .checkbox-input:checked + .checkbox-label:hover .checkbox-box::before {
    width: 0.3125rem;
    background: var(--color-bg-primary, #000);
    transition: width 150ms ease 100ms;
  }

  .checkbox-input:checked + .checkbox-label:hover .checkbox-box::after {
    width: 0.625rem;
    background: var(--color-bg-primary, #000);
    transition: width 150ms ease 100ms;
  }

  /* Focus state */
  .checkbox-input:focus + .checkbox-label .checkbox-box {
    outline: 2px solid var(--color-accent, #fff);
    outline-offset: 2px;
  }

  /* Disabled state */
  .checkbox-input:disabled + .checkbox-label {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .checkbox-input:disabled + .checkbox-label .checkbox-box {
    border-color: var(--color-border, rgba(255, 255, 255, 0.2));
  }

  .checkbox-text {
    flex: 1;
  }

  .optional-indicator {
    opacity: 0.5;
    font-size: 0.9em;
  }

  /* Link styling within checkbox text */
  .checkbox-text a {
    color: inherit;
    text-decoration: underline;
    text-underline-offset: 0.125rem;
  }

  .checkbox-text a:hover {
    opacity: 0.8;
  }

  /* Error state */
  .checkbox-wrapper.error .checkbox-box {
    border-color: #ef4444;
  }

  .checkbox-wrapper.error .checkbox-text {
    color: #ef4444;
  }
</style>

<script>
  // Enhanced checkbox behavior
  function initCheckboxes() {
    const checkboxes = document.querySelectorAll('.checkbox-input');

    checkboxes.forEach((checkbox) => {
      const checkboxEl = checkbox as HTMLInputElement;

      // Add keyboard support for space bar
      checkboxEl.addEventListener('keydown', (e) => {
        if (e.key === ' ' || e.key === 'Spacebar') {
          e.preventDefault();
          checkboxEl.checked = !checkboxEl.checked;
          checkboxEl.dispatchEvent(new Event('change', { bubbles: true }));
        }
      });
    });
  }

  // Initialize on load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initCheckboxes);
  } else {
    initCheckboxes();
  }

  // Re-initialize after View Transitions
  document.addEventListener('astro:page-load', initCheckboxes);
</script>
