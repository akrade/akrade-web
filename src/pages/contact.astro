---
import BaseLayout from '@/layouts/BaseLayout.astro';

// Design System
import '../styles/homepage.css';
import '../styles/contact.css';
---

<BaseLayout title="Contact | Akradé">

  <main class="contact-page">

    <!-- Contact Hero -->
    <section class="contact-hero">
      <h1>Let's Talk</h1>
      <p>Get in touch to discuss your AI product strategy and design needs.</p>
    </section>

    <!-- Contact Information -->
    <section class="contact-info">
      <h2>Contact Information</h2>
      <div class="contact-grid">
        <div class="contact-item">
          <p class="contact-label">NEW BUSINESS</p>
          <a href="tel:+14047819552">+1 404 781 9552</a>
        </div>
        <div class="contact-item">
          <p class="contact-label">EMAIL</p>
          <a href="mailto:hello@akrade.com">hello@akrade.com</a>
        </div>
      </div>
    </section>

    <!-- Schedule a Meeting -->
    <section class="contact-schedule">
      <h2>Schedule a Meeting</h2>
      <p>Book time directly on our calendar to discuss your project.</p>
      <div class="cal-embed-container">
        <iframe
          src="https://cal.com/akrade"
          width="100%"
          height="700"
          frameborder="0"
          allow="camera; microphone; autoplay; encrypted-media;"
          title="Schedule a meeting with Akradé"
        ></iframe>
      </div>
    </section>

    <!-- Newsletter Signup -->
    <section class="contact-newsletter">
      <h2>Sign Up for Our Newsletter</h2>
      <p>Stay updated with AI product strategy insights and design trends.</p>
      <form class="newsletter-form">
        <input type="email" placeholder="Email Address" class="newsletter-input" aria-label="Email Address">
        <button type="submit" class="newsletter-submit" aria-label="Subscribe">→</button>
      </form>
    </section>

  </main>

</BaseLayout>
