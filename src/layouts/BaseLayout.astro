<style is:global>
  /* Non-critical styles loaded after critical CSS */
  .about-lede {
    color: var(--color-white);
  }

  .page-wrapper #homepage {
    padding: 0;
  }

  #homepage .hero {
    padding-top: 0;
  }

  main {
    padding-top: 80px;
    flex: 1;
  }

  #homepage section {
    max-width: 1200px;
    margin: 0 auto;
    padding: 8rem 2rem;
    min-height: 90vh;
  }

  /* Non-critical grain effects */
  .grain::after {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.7);
    z-index: 1;
  }

  @keyframes grain {
    0%, 100% { transform: translate(0, 0); }
    10% { transform: translate(-5%, -10%); }
    20% { transform: translate(-15%, 5%); }
    30% { transform: translate(7%, -25%); }
    40% { transform: translate(-5%, 25%); }
    50% { transform: translate(-15%, 10%); }
    60% { transform: translate(15%, 0%); }
    70% { transform: translate(0%, 15%); }
    80% { transform: translate(3%, 25%); }
    90% { transform: translate(-10%, 10%); }
  }

  @keyframes flicker {
    0% { opacity: 0.15; }
    5% { opacity: 0.12; }
    10% { opacity: 0.18; }
    15% { opacity: 0.15; }
    20% { opacity: 0.16; }
    25% { opacity: 0.14; }
    30% { opacity: 0.15; }
    100% { opacity: 0.15; }
  }

  .grain {
    animation: grain 8s steps(10) infinite, flicker 0.15s infinite;
  }

  /* Subtle scan lines */
  .scanlines {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: repeating-linear-gradient(
      0deg,
      transparent,
      transparent 2px,
      rgba(0, 0, 0, 0.05) 2px,
      rgba(0, 0, 0, 0.05) 4px
    );
    pointer-events: none;
    z-index: 2;
    opacity: 0.3;
  }

  /* Ensure content is above all effects */
  body > :not(.grain-container):not(.vignette):not(.scanlines) {
    z-index: 10;
  }
</style>
