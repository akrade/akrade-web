---
/**
 * BusyFolk Newsletter Panel - Site-specific branded version
 *
 * Uses the reusable SlidePanel package but with BusyFolk-specific content.
 * This component lives on the site, not in the package, so brand details
 * don't carry over when reusing packages on other sites.
 */

import { SlidePanel } from '../packages/slide-panel';
import FloatingLabelInput from './FloatingLabelInput.astro';
import FloatingLabelSelect from './FloatingLabelSelect.astro';
import FloatingLabelCheckbox from './FloatingLabelCheckbox.astro';

const roleOptions = [
  { value: 'cxo', label: 'CXO' },
  { value: 'founder', label: 'Founder' },
  { value: 'design', label: 'Design Leader' },
  { value: 'product', label: 'Product Leader' },
  { value: 'strategy', label: 'Strategy' },
  { value: 'other', label: 'Other' },
];
---

<SlidePanel id="busyfolk-newsletter" title="BusyFolk">
  <div class="busyfolk-panel-content">
    <h3>Intelligent Guidance for Modern Builders</h3>
    <!-- Sub-headline -->
    <p class="busyfolk-subtitle">
      A field guide for CXOs, founders, and product leaders who need clarity, direction,
      and intelligent execution in an AI-accelerated world.
    </p>

    <!-- Value Statement -->
    <div class="busyfolk-value">
      <p class="busyfolk-value-intro">
        BusyFolk delivers what high-level operators actually need: sharp analysis,
        systems thinking, and actionable frameworks that support better decisions—without the noise.
      </p>

      <p class="busyfolk-value-label">Each edition covers:</p>
      <ul class="busyfolk-coverage">
        <li><strong>AI + Product Strategy:</strong> emerging patterns, practical applications, team readiness</li>
        <li><strong>Experience Design:</strong> modern practice, vision setting, and cross-functional alignment</li>
        <li><strong>Leadership Models:</strong> operating rhythm, culture design, Work+Life balance</li>
        <li><strong>Execution Frameworks:</strong> templates, decision matrices, and playbooks</li>
        <li><strong>Signals & Shifts:</strong> what's changing in technology, markets, and human behavior</li>
      </ul>
    </div>

    <!-- Target Audience -->
    <p class="busyfolk-audience">
      Written for people who build and guide: CXOs, founders, design leaders,
      product teams, and strategic decision-makers.
    </p>

    <!-- Form -->
    <form class="busyfolk-form" id="busyfolk-newsletter-form">
      <FloatingLabelInput
        name="email"
        type="email"
        label="Email Address"
        required={true}
        autocomplete="email"
      />

      <div class="busyfolk-form-row">
        <FloatingLabelInput
          name="name"
          type="text"
          label="Full Name"
          autocomplete="name"
        />

        <FloatingLabelInput
          name="company"
          type="text"
          label="Company"
          autocomplete="organization"
        />
      </div>

      <FloatingLabelSelect
        name="role"
        label="Role"
        options={roleOptions}
      />

      <FloatingLabelCheckbox
        name="consent"
        required={true}
      >
        I agree to receive the BusyFolk newsletter and occasional updates, and I have read the
        <a href="/legal/privacy-policy" target="_blank" rel="noopener noreferrer"> Privacy Policy</a>.
      </FloatingLabelCheckbox>

      <button type="submit" class="busyfolk-submit">
        Join BusyFolk
      </button>

      <p class="busyfolk-message" id="busyfolk-message"></p>
    </form>

    <!-- Trust / Microcopy -->
    <p class="busyfolk-trust">
      We send thoughtful, high-quality briefs—not weekly clutter.<br />
      Unsubscribe anytime.
    </p>
  </div>
</SlidePanel>

<style>
  .busyfolk-panel-content {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .busyfolk-subtitle {
    font-size: 1rem;
    line-height: 1.6;
    opacity: 0.9;
    margin: 0;
  }

  .busyfolk-value {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .busyfolk-value-intro {
    font-size: 0.95rem;
    line-height: 1.6;
    margin: 0;
  }

  .busyfolk-value-label {
    font-size: 0.9rem;
    font-weight: 500;
    margin: 0;
    opacity: 0.9;
  }

  .busyfolk-coverage {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;

    li {
      font-size: 0.875rem;
      line-height: 1.5;
      padding-left: 1rem;
      position: relative;

      &::before {
        content: "→";
        position: absolute;
        left: 0;
        opacity: 0.6;
      }

      strong {
        font-weight: 600;
      }
    }
  }

  .busyfolk-audience {
    font-size: 0.9rem;
    line-height: 1.6;
    font-style: italic;
    opacity: 0.8;
    margin: 0;
  }

  .busyfolk-form {
    display: flex;
    flex-direction: column;
    gap: 0;
    margin-top: 0.5rem;
  }

  .busyfolk-form-row {
    display: grid;
    grid-template-columns: 1fr;
    gap: 0;
  }

  @media (min-width: 640px) {
    .busyfolk-form-row {
      grid-template-columns: 1fr 1fr;
      gap: 0.5rem;
    }
  }

  .busyfolk-submit {
    width: 100%;
    padding: 0.875rem 1.5rem;
    background: var(--color-white);
    color: var(--color-bg-primary);
    border: none;
    border-radius: 0.5rem;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: opacity 0.2s;
    margin-top: 0.5rem;

    &:hover:not(:disabled) {
      opacity: 0.9;
    }

    &:disabled {
      opacity: 0.6;
      cursor: not-allowed;
    }

    &.loading {
      position: relative;

      &::after {
        content: "◌";
        display: inline-block;
        margin-left: 0.5rem;
        animation: spin 1s linear infinite;
      }
    }
  }

  @keyframes spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .busyfolk-message {
    font-size: 0.875rem;
    margin: 0;
    padding: 0.75rem 1rem;
    border-radius: 0.5rem;
    text-align: center;
    display: none;

    &.success {
      display: block;
      background: rgba(34, 197, 94, 0.1);
      color: var(--color-accent);
    }

    &.error {
      display: block;
      background: rgba(239, 68, 68, 0.1);
      color: #ef4444;
    }
  }

  .busyfolk-trust {
    font-size: 0.8rem;
    line-height: 1.5;
    opacity: 0.6;
    text-align: center;
    margin: 0;
  }

  @media (max-width: 768px) {
    .busyfolk-panel-content {
      gap: 1.25rem;
    }

    .busyfolk-subtitle {
      font-size: 0.95rem;
    }

    .busyfolk-coverage li {
      font-size: 0.8125rem;
    }
  }
</style>

<script>
  // BusyFolk newsletter form handler
  function initBusyFolkForm() {
    const form = document.getElementById('busyfolk-newsletter-form') as HTMLFormElement;
    const submitButton = form?.querySelector('.busyfolk-submit') as HTMLButtonElement;
    const messageEl = document.getElementById('busyfolk-message');
    const consentEl = form?.querySelector('input[name="consent"]') as HTMLInputElement;

    if (!form || !submitButton || !messageEl) return;

    // Prevent duplicate initialization
    if ((form as any).__busyfolk_initialized) return;
    (form as any).__busyfolk_initialized = true;

    submitButton.disabled = true;

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const emailInput = form.querySelector('input[name="email"]') as HTMLInputElement | null;
      const emailValue = emailInput?.value?.trim() || '';
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

      if (!emailRegex.test(emailValue)) {
        messageEl.className = 'busyfolk-message error';
        messageEl.textContent = 'Please enter a valid email.';
        return;
      }

      if (!consentEl?.checked) {
        messageEl.className = 'busyfolk-message error';
        messageEl.textContent = 'Please consent to receive BusyFolk updates.';
        return;
      }

      // Get form data
      const formData = new FormData(form);
      const data = {
        email: formData.get('email'),
        name: formData.get('name'),
        company: formData.get('company'),
        role: formData.get('role'),
        source: 'busyfolk-panel',
        consent: true,
        consent_copy: 'I agree to receive the BusyFolk newsletter and occasional updates.',
        form_url: typeof window !== 'undefined' ? window.location.href : undefined
      };

      // Update UI
      submitButton.disabled = true;
      submitButton.classList.add('loading');
      messageEl.className = 'busyfolk-message';
      messageEl.textContent = '';

      try {
        const response = await fetch('/api/subscribe', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        const result = await response.json();

        if (response.ok) {
          messageEl.className = 'busyfolk-message success';
          messageEl.textContent = result.message || 'Welcome to BusyFolk! Check your email.';
          form.reset();
          if (consentEl) consentEl.checked = false;

          // Track with analytics
          if (typeof window !== 'undefined' && (window as any).gtag) {
            (window as any).gtag('event', 'busyfolk_signup', {
              email_domain: data.email?.toString().split('@')[1],
              source: 'busyfolk-panel'
            });
          }
        } else {
          throw new Error(result.details || result.error || 'Subscription failed');
        }
      } catch (error) {
        messageEl.className = 'busyfolk-message error';
        messageEl.textContent = error instanceof Error ? error.message : 'Something went wrong. Please try again.';
      } finally {
      submitButton.disabled = !consentEl?.checked || !emailRegex.test(emailValue);
      submitButton.classList.remove('loading');

        // Clear message after 5 seconds
        setTimeout(() => {
          messageEl.className = 'busyfolk-message';
          messageEl.textContent = '';
        }, 5000);
      }
    });

    const toggleSubmit = () => {
      if (!submitButton || !consentEl) return;
      const emailInput = form.querySelector('input[name="email"]') as HTMLInputElement | null;
      const emailValue = emailInput?.value?.trim() || '';
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      submitButton.disabled = !consentEl.checked || !emailRegex.test(emailValue);
    };

    form.querySelector('input[name="email"]')?.addEventListener('input', toggleSubmit);
    consentEl?.addEventListener('change', toggleSubmit);
    toggleSubmit();
  }

  // Initialize on load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initBusyFolkForm);
  } else {
    initBusyFolkForm();
  }

  // Re-initialize after View Transitions
  document.addEventListener('astro:page-load', initBusyFolkForm);
</script>
