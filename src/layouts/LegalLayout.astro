---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  description?: string;
  lastUpdated?: string;
}

const { title, description, lastUpdated } = Astro.props;
---

<BaseLayout title={`${title} | AkradÃ©`} description={description}>
  <main class="legal-container">
    <article>
      <header class="legal-header">
        <h1>{title}</h1>
        {lastUpdated && (
          <p class="last-updated">Last Updated: {lastUpdated}</p>
        )}
      </header>
      
      <div class="legal-container">
        <div class="legal-content">
          <slot />
        </div>
      </div>
    </article>
  </main>
</BaseLayout>

<style is:global>
  .legal-container {
    max-width: 800px;
    margin: 0 auto;
    width: 100%;
  }

  .legal-container section {
    max-width: 1200px;
    margin: 0 auto 2rem;
    padding: 0;
  }

  .legal-header {
    margin-bottom: 3rem;
  }

  .legal-header h1 {
    font-size: 8.5rem;
    line-height: .90;
    margin-bottom: 1rem;
    margin: 0 0 6rem -13rem;
  }

  .last-updated {
    color: var(--color-muted);
    font-size: 0.875rem;
    font-style: italic;
  }

  .legal-content h2 {
    font-size: 1.5rem;
    line-height: 1.3;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .legal-content h3 {
    font-size: 1.25rem;
    line-height: 1.4;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .legal-content p {
    margin-bottom: 1.25rem;
  }

  .legal-content ul,
  .legal-content ol {
    margin-bottom: 1.25rem;
    padding-left: 2rem;
  }

  .legal-content li {
    margin-bottom: 0.5rem;
  }

  .legal-content a {
    color: var(--color-accent);
    text-decoration: underline;
    transition: color 0.2s ease;
  }

  .legal-content a:hover,
  .legal-content a:focus {
    color: var(--color-accent-hover);
  }

  .legal-content a:focus {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }

  .legal-content strong {
    font-weight: 600;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .legal-container {
      padding: 2rem 1.5rem;
    }

    .legal-header h1 {
      font-size: 2rem;
    }

    .legal-content h2 {
      font-size: 1.25rem;
      margin-top: 2rem;
    }

    .legal-content h3 {
      font-size: 1.1rem;
    }
  }

  /* Print styles */
  @media print {
    .legal-container {
      padding: 0;
    }

    .legal-content a {
      text-decoration: none;
    }
  }
</style>
