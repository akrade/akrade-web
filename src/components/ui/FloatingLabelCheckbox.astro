---
/**
 * Floating Label Checkbox Component
 * Material Design 3 inspired checkbox with custom styling
 */

export interface Props {
  name: string;
  label?: string;
  required?: boolean;
  checked?: boolean;
  value?: string;
  class?: string;
}

const {
  name,
  label,
  required = false,
  checked = false,
  value = 'on',
  class: className = '',
} = Astro.props;

const checkboxId = `checkbox-${name}-${Math.random().toString(36).substring(7)}`;
const hasSlotContent = Astro.slots.has('default');
---

<div class={`checkbox-wrapper ${className}`}>
  <input
    type="checkbox"
    id={checkboxId}
    name={name}
    class="checkbox-input"
    required={required}
    checked={checked}
    value={value}
  />
  <label for={checkboxId} class="checkbox-label">
    <span class="checkbox-box">
      <svg width="12px" height="9px" viewBox="0 0 12 9">
        <polyline points="1 5 4 8 11 1"></polyline>
      </svg>
    </span>
    <span class="checkbox-text">
      {hasSlotContent ? (
        <slot />
      ) : (
        <>
          {label}{!required && <span class="optional-indicator"> (optional)</span>}
        </>
      )}
    </span>
  </label>
</div>

<style>
  .checkbox-wrapper {
    position: relative;
    width: 100%;
    margin-bottom: 1rem;
  }

  .checkbox-input {
    position: absolute;
    opacity: 0;
    width: 0;
    height: 0;
  }

  .checkbox-label {
    display: inline-flex;
    align-items: flex-start;
    cursor: pointer;
    user-select: none;
    -webkit-user-select: none;
    -webkit-tap-highlight-color: transparent;
    font-size: 0.875rem;
    line-height: 1.5;
    color: var(--color-text, #fff);
  }

  .checkbox-label span {
    display: inline-block;
    vertical-align: middle;
    transform: translate3d(0, 0, 0);
  }

  .checkbox-box {
    position: relative;
    width: 1.5rem;
    height: 1.5rem;
    min-width: 1.5rem;
    border-radius: 50%;
    transform: scale(1);
    vertical-align: middle;
    border: 2px solid var(--color-border, rgba(255, 255, 255, 0.3));
    transition: all 0.2s ease;
    margin-top: 0.125rem;
  }

  .checkbox-box svg {
    position: absolute;
    z-index: 1;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    fill: none;
    stroke: var(--color-bg-primary, #000);
    stroke-width: 2;
    stroke-linecap: round;
    stroke-linejoin: round;
    stroke-dasharray: 16px;
    stroke-dashoffset: 16px;
    transition: all 0.3s ease;
    transition-delay: 0.1s;
  }

  .checkbox-box::before {
    content: "";
    width: 100%;
    height: 100%;
    background: var(--color-text, #fff);
    display: block;
    transform: scale(0);
    opacity: 1;
    border-radius: 50%;
    transition-delay: 0.2s;
  }

  .checkbox-text {
    margin-left: 1rem;
    flex: 1;
  }

  /* Hover state */
  .checkbox-label:hover .checkbox-box {
    border-color: var(--color-white);
  }

  /* Checked state */
  .checkbox-input:checked + .checkbox-label .checkbox-box {
    border-color: var(--color-text, #fff);
    background: var(--color-text, #fff);
    animation: checkbox-bounce 0.6s ease;
  }

  .checkbox-input:checked + .checkbox-label .checkbox-box svg {
    stroke-dashoffset: 0;
  }

  .checkbox-input:checked + .checkbox-label .checkbox-box::before {
    transform: scale(2.2);
    opacity: 0;
    transition: all 0.6s ease;
  }

  @keyframes checkbox-bounce {
    50% {
      transform: scale(1.2);
    }
  }

  /* Focus state */
  .checkbox-input:focus + .checkbox-label .checkbox-box {
    outline: 2px solid var(--color-text, #fff);
    outline-offset: 2px;
  }

  /* Disabled state */
  .checkbox-input:disabled + .checkbox-label {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .checkbox-input:disabled + .checkbox-label .checkbox-box {
    border-color: var(--color-border, rgba(255, 255, 255, 0.2));
  }

  .optional-indicator {
    opacity: 0.5;
    font-size: 0.9em;
  }

  /* Link styling within checkbox text */
  .checkbox-text a {
    color: inherit;
    text-decoration: underline;
    text-underline-offset: 0.125rem;
  }

  .checkbox-text a:hover {
    opacity: 0.8;
  }

  /* Error state */
  .checkbox-wrapper.error .checkbox-box {
    border-color: #ef4444;
  }

  .checkbox-wrapper.error .checkbox-text {
    color: #ef4444;
  }
</style>

<script>
  // Enhanced checkbox behavior
  function initCheckboxes() {
    const checkboxes = document.querySelectorAll('.checkbox-input');

    checkboxes.forEach((checkbox) => {
      const checkboxEl = checkbox as HTMLInputElement;

      // Add keyboard support for space bar
      checkboxEl.addEventListener('keydown', (e) => {
        if (e.key === ' ' || e.key === 'Spacebar') {
          e.preventDefault();
          checkboxEl.checked = !checkboxEl.checked;
          checkboxEl.dispatchEvent(new Event('change', { bubbles: true }));
        }
      });
    });
  }

  // Initialize on load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initCheckboxes);
  } else {
    initCheckboxes();
  }

  // Re-initialize after View Transitions
  document.addEventListener('astro:page-load', initCheckboxes);
</script>
