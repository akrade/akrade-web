/**
 * Grainy Film Effect Component
 *
 * Usage:
 * 1. Import this component in your page
 * 2. Add data-grainy-film attribute to <html> tag
 * 3. Include <GrainyFilm /> in your layout/page
 *
 * Example:
 * <html data-grainy-film>
 *   <body>
 *     <GrainyFilm />
 *     <!-- your content -->
 *   </body>
 * </html>
 */

// Import the CSS and JS
import './grainy-film.css';
---

