---
interface Props {
  title?: string;
}

const { title = "Akradé | AI-Driven Product Strategy" } = Astro.props;
const gaId = import.meta.env.PUBLIC_GA_ID;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Akradé is an AI-forward product strategy and human-centered design practice." />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    
    <!-- Google Analytics -->
    {gaId && (
      <>
        <script async src={`https://www.googletagmanager.com/gtag/js?id=${gaId}`}></script>
        <script define:vars={{ gaId }}>
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());
          gtag('config', gaId);
        </script>
      </>
    )}
  </head>
  <body>
    <!-- Grainy film effect -->
    <div class="grain-container">
      <canvas id="grainCanvas" class="grain"></canvas>
    </div>
    <div class="vignette"></div>
    <div class="scanlines"></div>

    <slot />

    <script>
      // Enhanced grain effect with canvas
      const canvas = document.getElementById('grainCanvas');
      const ctx = canvas.getContext('2d');
      
      function resizeCanvas() {
        canvas.width = window.innerWidth * 2;
        canvas.height = window.innerHeight * 2;
      }
      
      function drawGrain() {
        const imageData = ctx.createImageData(canvas.width, canvas.height);
        const buffer = new Uint32Array(imageData.data.buffer);
        
        const len = buffer.length;
        for (let i = 0; i < len; i++) {
          if (Math.random() < 0.05) {
            const gray = Math.random() * 255;
            buffer[i] = (255 << 24) | (gray << 16) | (gray << 8) | gray;
          }
        }
        
        ctx.putImageData(imageData, 0, 0);
      }
      
      resizeCanvas();
      window.addEventListener('resize', resizeCanvas);
      
      // Animate grain
      function animate() {
        drawGrain();
        requestAnimationFrame(animate);
      }
      
      animate();
    </script>
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    --color-white: #ffffff;
    --color-text: #fafafa;
    --color-muted: #f0ede3;
    --color-accent: #a563f1;
    --color-bg-primary: #1a1a1a;
    --color-bg-elevated: #2a2a2a;
    --color-bg-hover: #3a3a3a;
    --color-text-primary: #fafafa;
    --color-text-muted: #f0ede3;
    --color-border: rgba(255, 255, 255, 0.1);
    --font-sans: system-ui, -apple-system, sans-serif;
    --font-serif: Georgia, 'Times New Roman', Times, serif;
  }

  html {
    font-family: var(--font-sans);
    background: var(--color-bg-primary);
    color: var(--color-text-primary);
    scroll-behavior: smooth;
  }

  body {
    min-height: 100vh;
    line-height: 1.6;
    position: relative;
  }

  /* Grainy film effect */
  .grain-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    pointer-events: none;
  }

  .grain {
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    opacity: 0.5;
  }

  .grain::after {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.7);
    z-index: 1;
  }

  @keyframes grain {
    0%, 100% { transform: translate(0, 0); }
    10% { transform: translate(-5%, -10%); }
    20% { transform: translate(-15%, 5%); }
    30% { transform: translate(7%, -25%); }
    40% { transform: translate(-5%, 25%); }
    50% { transform: translate(-15%, 10%); }
    60% { transform: translate(15%, 0%); }
    70% { transform: translate(0%, 15%); }
    80% { transform: translate(3%, 25%); }
    90% { transform: translate(-10%, 10%); }
  }

  @keyframes flicker {
    0% { opacity: 0.15; }
    5% { opacity: 0.12; }
    10% { opacity: 0.18; }
    15% { opacity: 0.15; }
    20% { opacity: 0.16; }
    25% { opacity: 0.14; }
    30% { opacity: 0.15; }
    100% { opacity: 0.15; }
  }

  .grain {
    animation: grain 8s steps(10) infinite, flicker 0.15s infinite;
  }

  /* Vignette overlay */
  .vignette {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(ellipse at center, transparent 0%, rgba(0,0,0,0.4) 100%);
    pointer-events: none;
    z-index: 2;
  }

  /* Subtle scan lines */
  .scanlines {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: repeating-linear-gradient(
      0deg,
      transparent,
      transparent 2px,
      rgba(0, 0, 0, 0.05) 2px,
      rgba(0, 0, 0, 0.05) 4px
    );
    pointer-events: none;
    z-index: 2;
    opacity: 0.3;
  }

  /* Ensure content is above all effects */
  body > :not(.grain-container):not(.vignette):not(.scanlines) {
    z-index: 10;
  }
</style>