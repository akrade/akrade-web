---
// Global Page Components
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import ScheduleCallPanel from '@/components/ScheduleCallPanel.astro';
import GrainyFilm from '@/packages/grainy-film/GrainyFilm.astro';

// Design System
import '../styles/colors.css';
import '../styles/base-layout.css';
import '../styles/theme-light.css';

// Thrid-party Anlytics
import Analytics from '@vercel/analytics/astro'
import CookieConsent from '@/components/CookieConsent.astro';
import Clarity from '@/components/Clarity.astro';
import GoogleAnalytics from '@/components/GoogleAnalytics.astro';
import SpeedInsights  from "@vercel/speed-insights/astro"


interface Props {
  title?: string;
  description?: string;
  'data-grainy-film'?: string | boolean;
  theme?: 'light' | 'dark' | 'neutral';
}

const {
  title = "Akradé | AI-Driven Product Strategy",
  description = "Akradé is an AI-forward product strategy and human-centered design practice.",
  'data-grainy-film': grainyFilm,
  theme
} = Astro.props;
---

<!doctype html>
<html lang="en" data-grainy-film={grainyFilm ? '' : undefined} data-theme={theme}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.akrade.com/" />
    <meta property="og:title" content="Akradé | Smart AI Product Strategy & Design" />
    <meta property="og:description" content="Data-driven clarity. Human-centered design. Measurable results." />
    <meta property="og:image" content="https://www.akrade.com/og-image.png" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://www.akrade.com/" />
    <meta property="twitter:title" content="Akradé | Smart AI Product Strategy & Experience Design" />
    <meta property="twitter:description" content="Data-driven clarity. Human-centered design. Measurable results." />
    <meta property="twitter:image" content="https://www.akrade.com/og-image.png" />

    <!-- Core favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32.png" />

    <!-- Apple / mobile -->
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon-180.png" />

    <!-- Android / PWA-ish -->
    <link rel="icon" type="image/png" sizes="192x192" href="/favicon-192.png" />
    <link rel="icon" type="image/png" sizes="512x512" href="/favicon-512.png" />
    <link rel="manifest" href="/site.webmanifest">

    <title>{title}</title>

    <!-- Organization Schema -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "ProfessionalService",
      "name": "Akrade",
      "description": "Akradé is an AI-forward product strategy and human-centered design practice that helps organizations clarify vision, shape intelligent digital products, and deliver meaningful business outcomes.",
      "url": "https://akrade.com",
      "logo": "https://akrade.com/logo.png",
      "image": "https://akrade.com/og-image.png",
      "telephone": "+1-404-781-9552",
      "email": "hello@akrade.com",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Atlanta",
        "addressRegion": "GA",
        "addressCountry": "US"
      },
      "founder": {
        "@type": "Person",
        "name": "Dante Taylor",
        "jobTitle": "Founder & CXO",
        "knowsAbout": [
          "Artificial Intelligence",
          "Product Management",
          "User Experience Design",
          "Full-Stack Development",
          "Digital Transformation",
          "Generative AI"
        ]
      },
      "sameAs": [
        "https://linkedin.com/company/akrade",
        "https://twitter.com/akradeco",
        "https://github.com/akrade"
      ],
      "areaServed": {
        "@type": "Country",
        "name": "United States"
      },
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Services",
        "itemListElement": [
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "AI Product Strategy",
              "description": "Strategic roadmap development powered by AI insights and market intelligence"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Product Management",
              "description": "End-to-end product leadership from strategy through delivery and iteration"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Experience Design",
              "description": "User flow refinement and experience design that puts humans first"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Product Definition",
              "description": "Clear requirements development and product scoping for confident execution"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Discovery & Research",
              "description": "User interviews, competitive analysis, and market validation to inform product direction"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Design Systems",
              "description": "Scalable component libraries and design standards for consistent product experiences"
            }
          }
        ]
      }
    }
    </script>
    <Clarity />
  </head>
  <body>
    <div class="page-wrapper">

      <Header />

      <!-- Grainy film effect (conditionally rendered) -->
      {grainyFilm && <GrainyFilm />}

      <slot />
    
      <!-- Google Analytics with Consent Mode -->
      <GoogleAnalytics />

      <!-- Add Analytics component before closing body tag -->
      <Analytics />
      
      <!-- Cookie Consent (must be last) -->
      <CookieConsent />

      <!--Vercel Speed Insights -->
      <SpeedInsights />
    </div>
    <Footer />

    <!-- Schedule Call Panel -->
    <ScheduleCallPanel />
  </body>
</html>
