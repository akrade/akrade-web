---
/**
 * BusyFolk Newsletter Panel - Site-specific branded version
 *
 * Uses the reusable SlidePanel package but with BusyFolk-specific content.
 * This component lives on the site, not in the package, so brand details
 * don't carry over when reusing packages on other sites.
 */

import { SlidePanel } from '../packages/slide-panel';
---

<SlidePanel id="busyfolk-newsletter" title="BusyFolk: Intelligent Guidance for Modern Builders">
  <div class="busyfolk-panel-content">
    <!-- Sub-headline -->
    <p class="busyfolk-subtitle">
      A field guide for CXOs, founders, and product leaders who need clarity, direction,
      and intelligent execution in an AI-accelerated world.
    </p>

    <!-- Value Statement -->
    <div class="busyfolk-value">
      <p class="busyfolk-value-intro">
        BusyFolk delivers what high-level operators actually need: sharp analysis,
        systems thinking, and actionable frameworks that support better decisions—without the noise.
      </p>

      <p class="busyfolk-value-label">Each edition covers:</p>
      <ul class="busyfolk-coverage">
        <li><strong>AI + Product Strategy:</strong> emerging patterns, practical applications, team readiness</li>
        <li><strong>Experience Design:</strong> modern practice, vision setting, and cross-functional alignment</li>
        <li><strong>Leadership Models:</strong> operating rhythm, culture design, Work+Life balance</li>
        <li><strong>Execution Frameworks:</strong> templates, decision matrices, and playbooks</li>
        <li><strong>Signals & Shifts:</strong> what's changing in technology, markets, and human behavior</li>
      </ul>
    </div>

    <!-- Target Audience -->
    <p class="busyfolk-audience">
      Written for people who build and guide: CXOs, founders, design leaders,
      product teams, and strategic decision-makers.
    </p>

    <!-- Form -->
    <form class="busyfolk-form" id="busyfolk-newsletter-form">
      <input
        type="email"
        name="email"
        placeholder="Email Address"
        class="busyfolk-input"
        aria-label="Email Address"
        required
      />

      <input
        type="text"
        name="name"
        placeholder="Full Name (optional)"
        class="busyfolk-input"
        aria-label="Full Name"
      />

      <input
        type="text"
        name="company"
        placeholder="Company (optional)"
        class="busyfolk-input"
        aria-label="Company"
      />

      <select
        name="role"
        class="busyfolk-input busyfolk-select"
        aria-label="Role"
      >
        <option value="">Role (optional)</option>
        <option value="cxo">CXO</option>
        <option value="founder">Founder</option>
        <option value="design">Design Leader</option>
        <option value="product">Product Leader</option>
        <option value="strategy">Strategy</option>
        <option value="other">Other</option>
      </select>

      <button type="submit" class="busyfolk-submit">
        Join BusyFolk
      </button>

      <p class="busyfolk-message" id="busyfolk-message"></p>
    </form>

    <!-- Trust / Microcopy -->
    <p class="busyfolk-trust">
      We send thoughtful, high-quality briefs—not weekly clutter.<br />
      Unsubscribe anytime.
    </p>
  </div>
</SlidePanel>

<style>
  .busyfolk-panel-content {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .busyfolk-subtitle {
    font-size: 1rem;
    line-height: 1.6;
    opacity: 0.9;
    margin: 0;
  }

  .busyfolk-value {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .busyfolk-value-intro {
    font-size: 0.95rem;
    line-height: 1.6;
    margin: 0;
  }

  .busyfolk-value-label {
    font-size: 0.9rem;
    font-weight: 500;
    margin: 0;
    opacity: 0.9;
  }

  .busyfolk-coverage {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;

    li {
      font-size: 0.875rem;
      line-height: 1.5;
      padding-left: 1rem;
      position: relative;

      &::before {
        content: "→";
        position: absolute;
        left: 0;
        opacity: 0.6;
      }

      strong {
        font-weight: 600;
      }
    }
  }

  .busyfolk-audience {
    font-size: 0.9rem;
    line-height: 1.6;
    font-style: italic;
    opacity: 0.8;
    margin: 0;
  }

  .busyfolk-form {
    display: flex;
    flex-direction: column;
    gap: 0.875rem;
    margin-top: 0.5rem;
  }

  .busyfolk-input,
  .busyfolk-select {
    width: 100%;
    padding: 0.875rem 1rem;
    font-size: 0.95rem;
    font-family: inherit;
    background: var(--color-bg-elevated);
    color: var(--color-text);
    border: 2px solid var(--color-border, rgba(255, 255, 255, 0.1));
    border-radius: 0.5rem;
    outline: none;
    transition: border-color 0.2s;

    &::placeholder {
      color: var(--color-text);
      opacity: 0.5;
    }

    &:focus {
      border-color: var(--color-accent);
    }

    &:disabled {
      opacity: 0.6;
      cursor: not-allowed;
    }
  }

  .busyfolk-select {
    cursor: pointer;
  }

  .busyfolk-submit {
    width: 100%;
    padding: 0.875rem 1.5rem;
    background: var(--color-accent);
    color: var(--color-bg-primary);
    border: none;
    border-radius: 0.5rem;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: opacity 0.2s;
    margin-top: 0.5rem;

    &:hover:not(:disabled) {
      opacity: 0.9;
    }

    &:disabled {
      opacity: 0.6;
      cursor: not-allowed;
    }

    &.loading {
      position: relative;

      &::after {
        content: "◌";
        display: inline-block;
        margin-left: 0.5rem;
        animation: spin 1s linear infinite;
      }
    }
  }

  @keyframes spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .busyfolk-message {
    font-size: 0.875rem;
    margin: 0;
    padding: 0.75rem 1rem;
    border-radius: 0.5rem;
    text-align: center;
    display: none;

    &.success {
      display: block;
      background: rgba(34, 197, 94, 0.1);
      color: var(--color-accent);
    }

    &.error {
      display: block;
      background: rgba(239, 68, 68, 0.1);
      color: #ef4444;
    }
  }

  .busyfolk-trust {
    font-size: 0.8rem;
    line-height: 1.5;
    opacity: 0.6;
    text-align: center;
    margin: 0;
  }

  @media (max-width: 768px) {
    .busyfolk-panel-content {
      gap: 1.25rem;
    }

    .busyfolk-subtitle {
      font-size: 0.95rem;
    }

    .busyfolk-coverage li {
      font-size: 0.8125rem;
    }
  }
</style>

<script>
  // BusyFolk newsletter form handler
  function initBusyFolkForm() {
    const form = document.getElementById('busyfolk-newsletter-form') as HTMLFormElement;
    const submitButton = form?.querySelector('.busyfolk-submit') as HTMLButtonElement;
    const messageEl = document.getElementById('busyfolk-message');

    if (!form || !submitButton || !messageEl) return;

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      // Get form data
      const formData = new FormData(form);
      const data = {
        email: formData.get('email'),
        name: formData.get('name'),
        company: formData.get('company'),
        role: formData.get('role'),
        source: 'busyfolk-panel'
      };

      // Update UI
      submitButton.disabled = true;
      submitButton.classList.add('loading');
      messageEl.className = 'busyfolk-message';
      messageEl.textContent = '';

      try {
        const response = await fetch('/api/subscribe', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        const result = await response.json();

        if (response.ok) {
          messageEl.className = 'busyfolk-message success';
          messageEl.textContent = result.message || 'Welcome to BusyFolk! Check your email.';
          form.reset();

          // Track with analytics
          if (typeof window !== 'undefined' && (window as any).gtag) {
            (window as any).gtag('event', 'busyfolk_signup', {
              email_domain: data.email?.toString().split('@')[1],
              source: 'busyfolk-panel'
            });
          }
        } else {
          throw new Error(result.error || 'Subscription failed');
        }
      } catch (error) {
        messageEl.className = 'busyfolk-message error';
        messageEl.textContent = error instanceof Error ? error.message : 'Something went wrong. Please try again.';
      } finally {
        submitButton.disabled = false;
        submitButton.classList.remove('loading');

        // Clear message after 5 seconds
        setTimeout(() => {
          messageEl.className = 'busyfolk-message';
          messageEl.textContent = '';
        }, 5000);
      }
    });
  }

  // Initialize on load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initBusyFolkForm);
  } else {
    initBusyFolkForm();
  }

  // Re-initialize after View Transitions
  document.addEventListener('astro:page-load', initBusyFolkForm);
</script>
