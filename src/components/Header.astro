<div class="mobile-menu">
  <button class="close-menu" aria-label="Close menu">
    <span></span>
    <span></span>
  </button>
  <ul>
    <li><a href="#about" data-section="about">About</a></li>
    <li><a href="#services" data-section="services">Services</a></li>
    <li><a href="#contact" data-section="contact">Contact</a></li>
    <li><button class="schedule-call-btn mobile" id="mobileScheduleBtn">Schedule a Call</button></li>
  </ul>
</div>

<script>
  // Cache DOM queries
  const sections = document.querySelectorAll('section[id]');
  const navLinks = document.querySelectorAll('nav a[data-section], .mobile-menu a[data-section]');
  const hamburger = document.querySelector('.hamburger');
  const mobileMenu = document.querySelector('.mobile-menu');
  const closeMenu = document.querySelector('.close-menu');
  const mobileMenuLinks = document.querySelectorAll('.mobile-menu a');
  const smoothScrollLinks = Array.from(document.querySelectorAll('a[href*="#"]')).filter(link => {
    const url = new URL(link.href, window.location.href);
    return url.origin === window.location.origin && url.pathname === window.location.pathname && url.hash;
  });
  const headerHeight = document.querySelector('header')?.offsetHeight || 0;

  // Scroll section into view
  const scrollSectionIntoView = (target, shouldUpdateHash = true) => {
    const centerPosition = target.offsetTop + target.offsetHeight / 2 - window.innerHeight / 2;
    const clampedPosition = Math.max(0, centerPosition - headerHeight / 2);

    window.scrollTo({ top: clampedPosition, behavior: 'smooth' });
    if (shouldUpdateHash) history.pushState(null, null, `#${target.id}`);
  };

  // Smooth scroll click handler
  smoothScrollLinks.forEach(link => {
    link.addEventListener('click', e => {
      e.preventDefault();
      const target = document.getElementById(new URL(link.href, window.location.href).hash.slice(1));
      if (target) scrollSectionIntoView(target);
    });
  });

  // Throttle helper
  const throttle = (fn, delay) => {
    let lastCall = 0;
    return (...args) => {
      const now = Date.now();
      if (now - lastCall >= delay) {
        lastCall = now;
        fn(...args);
      }
    };
  };

  // Combined scroll handler for URL and active link updates
  const handleScroll = throttle(() => {
    const scrollY = window.scrollY;
    const scrollPosition = scrollY + 200;
    const offset = window.innerHeight * 0.4;
    let currentSection = '';

    sections.forEach(section => {
      const sectionTop = section.offsetTop;
      const sectionHeight = section.offsetHeight;
      const sectionId = section.getAttribute('id');

      // Update URL hash
      if (scrollPosition >= sectionTop && scrollPosition < sectionTop + sectionHeight) {
        currentSection = sectionId;
      }

      // Update active link
      if (scrollY >= sectionTop - offset && scrollY < sectionTop + sectionHeight - offset) {
        navLinks.forEach(link => {
          link.classList.toggle('active', link.dataset.section === sectionId);
        });
      }
    });

    // Update URL
    if (currentSection) {
      history.replaceState(null, null, `#${currentSection}`);
    } else if (scrollY < 100) {
      history.replaceState(null, null, window.location.pathname);
    }
  }, 100); // Throttle to 100ms

  window.addEventListener('scroll', handleScroll, { passive: true });

  // Handle direct hash URLs on load
  window.addEventListener('load', () => {
    const targetId = window.location.hash.slice(1);
    const target = targetId ? document.getElementById(targetId) : null;
    if (target) setTimeout(() => scrollSectionIntoView(target, false), 0);
    handleScroll(); // Set initial active link
  });

  // Mobile menu handlers
  const openMenu = () => {
    mobileMenu.classList.add('open');
    document.body.style.overflow = 'hidden';
    closeMenu.focus();
  };

  const closeMenuFn = () => {
    mobileMenu.classList.remove('open');
    document.body.style.overflow = '';
    hamburger.focus();
  };

  hamburger.addEventListener('click', openMenu);
  closeMenu.addEventListener('click', closeMenuFn);
  mobileMenuLinks.forEach(link => link.addEventListener('click', closeMenuFn));

  // ESC key to close menu
  document.addEventListener('keydown', e => {
    if (e.key === 'Escape' && mobileMenu.classList.contains('open')) closeMenuFn();
  });

  // Schedule call panel integration
  const headerScheduleBtn = document.getElementById('headerScheduleBtn');
  const mobileScheduleBtn = document.getElementById('mobileScheduleBtn');

  const openSchedulePanel = () => {
    if (typeof (window as any).openSchedulePanel === 'function') {
      (window as any).openSchedulePanel();
      // Close mobile menu if open
      if (mobileMenu.classList.contains('open')) {
        closeMenuFn();
      }
    }
  };

  headerScheduleBtn?.addEventListener('click', openSchedulePanel);
  mobileScheduleBtn?.addEventListener('click', openSchedulePanel);
</script>

<style>
  header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    padding: 0.2rem 2rem;
    background: rgba(10, 10, 10, 0.3);
    backdrop-filter: blur(10px);
  }

  nav {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-size: 1.5rem;
    font-weight: 600;
    text-decoration: none;
    color: var(--color-text);
    z-index: 101;
  }

  .desktop-nav {
    display: flex;
    gap: 2rem;
    list-style: none;
  }

  .desktop-nav a {
    text-decoration: none;
    color: var(--color-muted);
    transition: color 0.2s, font-weight 0.2s;
  }

  .desktop-nav a:hover {
    color: var(--color-text);
  }

  .desktop-nav a.active {
    color: var(--color-text);
    font-weight: 700;
  }

  /* Schedule Call Button */
  .schedule-call-btn {
    background: var(--color-accent);
    color: var(--color-bg-primary);
    border: none;
    padding: 0.3rem 1rem;
    font-size: 0.875rem;
    font-weight: 600;
    border-radius: 50px;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .schedule-call-btn:hover {
    background: var(--color-white);
  }

  /* Hamburger */
  .hamburger {
    display: none;
    flex-direction: column;
    gap: 6px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    z-index: 101;
  }

  .hamburger span {
    width: 24px;
    height: 2px;
    background: var(--color-text);
    transition: all 0.3s;
  }

  .hamburger span:nth-child(3) {
    display: none;
  }

  /* Mobile menu overlay */
  .mobile-menu {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: var(--color-bg-primary);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 200;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s;
  }

  .mobile-menu.open {
    opacity: 1;
    pointer-events: all;
  }

  .mobile-menu ul {
    list-style: none;
    text-align: center;
    padding: 0;
  }

  .mobile-menu li {
    margin: 2rem 0;
  }

  .mobile-menu a {
    font-size: 2rem;
    text-decoration: none;
    color: var(--color-muted);
    transition: color 0.2s;
  }

  .mobile-menu a:hover,
  .mobile-menu a.active {
    color: var(--color-text);
  }

  .mobile-menu .schedule-call-btn.mobile {
    font-size: 1.5rem;
    padding: 0.75rem 2rem;
    margin-top: 1rem;
  }

  /* Close button (X) */
  .close-menu {
    position: absolute;
    top: 2rem;
    right: 2rem;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    width: 40px;
    height: 40px;
  }

  .close-menu span {
    position: absolute;
    width: 30px;
    height: 2px;
    background: var(--color-text);
    top: 50%;
    left: 50%;
  }

  .close-menu span:first-child {
    transform: translate(-50%, -50%) rotate(45deg);
  }

  .close-menu span:last-child {
    transform: translate(-50%, -50%) rotate(-45deg);
  }

  @media (max-width: 768px) {
    .desktop-nav {
      display: none;
    }
    
    .hamburger {
      display: flex;
    }
  }
</style>
